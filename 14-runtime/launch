#!/bin/bash
# Unified Launcher Shell Script
# Quick access to the Semantic Kernel workspace functionality

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
BOLD='\033[1m'
NC='\033[0m' # No Color

# Get script directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
WORKSPACE_ROOT="$SCRIPT_DIR"

# Banner
echo -e "${CYAN}${BOLD}"
cat << "EOF"
üöÄ SEMANTIC KERNEL UNIFIED LAUNCHER
===================================
EOF
echo -e "${NC}"

echo -e "${GREEN}Workspace: ${WORKSPACE_ROOT}${NC}"
echo -e "${BLUE}Making everything runnable from one place!${NC}"
echo ""

# Check for Python
if ! command -v python3 &> /dev/null; then
    echo -e "${RED}‚ùå Python 3 not found! Please install Python 3.8+${NC}"
    exit 1
fi

# Check for unified launcher
UNIFIED_LAUNCHER="$WORKSPACE_ROOT/unified_launcher.py"
if [ ! -f "$UNIFIED_LAUNCHER" ]; then
    echo -e "${RED}‚ùå Unified launcher not found!${NC}"
    echo -e "${YELLOW}Looking for: $UNIFIED_LAUNCHER${NC}"
    exit 1
fi

# Function to show quick help
show_help() {
    echo -e "${YELLOW}Usage: $0 [command] [options]${NC}"
    echo ""
    echo -e "${BOLD}Commands:${NC}"
    echo "  fix      - Fix all files in the workspace"
    echo "  setup    - Setup environment and dependencies"
    echo "  install  - Install dependencies only"
    echo "  list     - List all available scripts"
    echo "  help     - Show this help message"
    echo ""
    echo -e "${BOLD}Examples:${NC}"
    echo "  $0                    # Interactive mode"
    echo "  $0 fix               # Fix all files"
    echo "  $0 setup             # Full setup"
    echo "  $0 --script demo     # Run specific script"
    echo ""
}

# Main execution
if [ $# -eq 0 ]; then
    # No arguments - interactive mode
    echo -e "${GREEN}üöÄ Starting interactive mode...${NC}"
    python3 "$UNIFIED_LAUNCHER"
elif [ "$1" = "help" ] || [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    show_help
else
    # Pass all arguments to the unified launcher
    echo -e "${GREEN}üöÄ Running: python3 unified_launcher.py $*${NC}"
    python3 "$UNIFIED_LAUNCHER" "$@"
fi

echo ""
echo -e "${CYAN}üëã Thanks for using Semantic Kernel!${NC}"
