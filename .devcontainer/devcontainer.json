{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {}
  },
  // Prebuild script to cache dependencies
  "prebuild": "npm install && dotnet restore && mvn dependency:resolve",
  // Post attach command to start the npm server
  "postAttachCommand": "npm start",
  // Post create command to set permissions
  "postCreateCommand": "sudo chmod a+rwx /usr/share/dotnet && sudo chmod +x ./parallel-post-start.sh",
  // Post start command to restore, build, and install dependencies
  "postStartCommand": "npm run prebuild & ./parallel-post-start.sh &",
  "remoteEnv": {
    "DOTNET_ROOT": "/usr/share/dotnet",
    "PYTHONPATH": "${workspaceFolder}/python"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-python.python",
        "vscjava.vscode-java-pack",
        "dbaeumer.vscode-eslint",
        "ms-dotnettools.dotnet-interactive",
        "ms-vscode.cpptools",
        "msjsdiag.debugger-for-chrome",
        "ms-vscode.go",
        "ms-azure-devops.azure-pipelines",
        "ms-cst-e.vscode-devskim"
      ]
    }
  },
  "tasks": {
    "test": "npm test && pytest && dotnet test && mvn test",
    "build": "npm install && dotnet build --no-restore && dotnet test --no-build --verbosity normal",
    "launch": "npm start"
  }
}
