{
  "configurations": [
    {
      "name": "Launch Java App",
      "type": "java",
      "request": "launch",
    },
    {
      "name": "Run npm start",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "args": ["start"],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    // Docker configuration for .NET Core applications
    {
      "name": "Docker: .NET Attach (Preview)",
      "platform": "netCore",
      "request": "attach",
      "sourceFileMap": {
        "/src": "${workspaceFolder}"
      },
      "type": "docker"
    },
    {
      "args": ["run", "--host", "0.0.0.0", "--port", "8000"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env.local.template",
      "name": "Python: FastAPI",
      "program": "${workspaceFolder}/app.py",
      "request": "launch",
      "type": "debugpy",
      "justMyCode": true
    },
    {
      "name": "Semantic Kernel: Specific Function Launch",
      "program": "${relativeFile}",
      "request": "launch",
      "type": "semantic-kernel.skprompt.debugger",
      "workspaceFolder": "${workspaceFolder}"
    },
    {
      "name": "C#: Attach to .NET Functions",
      "preLaunchTask": "build (Concepts)",
      "processId": "${command:pickProcess}",
      "request": "attach",
      "type": "coreclr"
    },
    {
      "name": ".NET Core Attach",
      "request": "attach",
      "type": "coreclr"
    },
    {
      "args": ["${file}"],
      "cwd": "${workspaceFolder}/python",
      "module": "pytest",
      "name": "Python: Test Module",
      "request": "launch",
      "type": "debugpy"
    },
    {
      "name": "C#: HuggingFaceImageToText Demo",
      "type": "dotnet",
      "request": "launch",
      "projectPath": "${workspaceFolder}/dotnet/samples/Demos/HuggingFaceImageToText/HuggingFaceImageToText.csproj"
    },
    {
      "name": "C#: GettingStarted Samples",
      "type": "dotnet",
      "request": "launch",
      "projectPath": "${workspaceFolder}/dotnet/samples/GettingStarted/GettingStarted.csproj"
    },
    {
      "name": "C#: Process with Dapr",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/dotnet/samples/Demos/ProcessWithDapr/bin/Debug/net8.0/ProcessWithDapr.dll",
      "preLaunchTask": "daprd-debug",
      "postDebugTask": "dapr-down"
    },
    {
      "name": "Run Web Server",
      "type": "node",
      "request": "launch",
      "args": ["run", "--host", "0.0.0.0", "--port", "8000"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env.local",
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "version": "0.2.0"
}