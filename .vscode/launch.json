{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Node.js Web Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server.js",
      "args": ["--host", "0.0.0.0", "--port", "3000"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}"
    },
    {
      "console": "integratedTerminal",
      "justMyCode": true,
      "name": "Python Debugger: Current File",
      "program": "${file}",
      "request": "launch",
      "type": "debugpy"
    },
    {
      "args": [
        "run",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true,
      "name": "Python: FastAPI",
      "program": "${workspaceFolder}/app.py",
      "request": "launch",
      "type": "debugpy"
    },
    {
      "args": [
        "${file}"
      ],
      "cwd": "${workspaceFolder}/python",
      "module": "pytest",
      "name": "Python: Test Module",
      "request": "launch",
      "type": "debugpy"
    },
    {
      "name": "C#: Attach to .NET Functions",
      "preLaunchTask": "build (Concepts)",
      "processId": "${command:pickProcess}",
      "request": "attach",
      "type": "coreclr"
    },
    {
      "name": "C#: Attach to .NET Core",
      "processId": "${command:pickProcess}",
      "request": "attach",
      "type": "coreclr"
    },
    {
      "cwd": "${workspaceFolder}/dotnet/samples/Demos/HuggingFaceImageToText",
      "name": "C#: HuggingFaceImageToText Demo",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/dotnet/samples/Demos/HuggingFaceImageToText/bin/Debug/net8.0/HuggingFaceImageToText.dll",
      "request": "launch",
      "type": "coreclr"
    },
    {
      "cwd": "${workspaceFolder}/dotnet/samples/GettingStarted",
      "name": "C#: GettingStarted Samples",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/dotnet/samples/GettingStarted/bin/Debug/net8.0/GettingStarted.dll",
      "request": "launch",
      "type": "coreclr"
    },
    {
      "cwd": "${workspaceFolder}/dotnet/samples/Demos/ProcessWithDapr",
      "name": "C#: Process with Dapr",
      "postDebugTask": "dapr-down",
      "preLaunchTask": "daprd-debug",
      "program": "${workspaceFolder}/dotnet/samples/Demos/ProcessWithDapr/bin/Debug/net8.0/ProcessWithDapr.dll",
      "request": "launch",
      "type": "coreclr"
    },
    {
      "containerName": "dotnet-app",
      "name": "Docker: .NET Attach (Preview)",
      "platform": "netCore",
      "request": "attach",
      "sourceFileMap": {
        "/src": "${workspaceFolder}"
      },
      "type": "docker"
    },
    {
      "name": "Semantic Kernel: Launch Specific Function",
      "program": "${relativeFile}",
      "request": "launch",
      "type": "semantic-kernel.skprompt.debugger",
      "workspaceFolder": "${workspaceFolder}"
    }
  ]
}