{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Docker .NET Attach (Preview)",
      "type": "docker",
      "request": "attach",
      "platform": "netCore",
      "sourceFileMap": {
        "/src": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: FastAPI",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/app.py",
      "args": ["run", "--host", "0.0.0.0", "--port", "8000"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env.local.template"
    },
    {
      "type": "semantic-kernel.skprompt.debugger",
      "request": "launch",
      "name": "Semantic Kernel Function Launch",
      "workspaceFolder": "${workspaceFolder}",
      "program": "${relativeFile}"
    },
    {
      "name": "C#: Attach to .NET Functions",
      "preLaunchTask": "build (Concepts)",
      "processId": "${command:pickProcess}",
      "request": "attach",
      "type": "coreclr"
    },
    {
      "name": ".NET Core Attach",
      "request": "attach",
      "type": "node"
    },
    {
      "name": "Python: Test Module",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["${file}"],
      "cwd": "${workspaceFolder}/python"
    },
    {
      "name": "C#: HuggingFaceImageToText Demo",
      "projectPath": "${workspaceFolder}/dotnet/samples/Demos/HuggingFaceImageToText/HuggingFaceImageToText.csproj",
      "request": "launch",
      "type": "dotnet"
    },
    {
      "name": "C#: GettingStarted Samples",
      "projectPath": "${workspaceFolder}/dotnet/samples/GettingStarted/GettingStarted.csproj",
      "request": "launch",
      "type": "dotnet"
    },
    {
      "name": "C#: Process with Dapr",
      "program": "${workspaceFolder}/dotnet/samples/Demos/ProcessWithDapr/bin/Debug/net8.0/ProcessWithDapr.dll",
      "request": "launch",
      "type": "coreclr",
      "preLaunchTask": "daprd-debug",
      "postDebugTask": "dapr-down",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ]
}
