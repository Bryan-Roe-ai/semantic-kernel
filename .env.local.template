# Use .env.local to change these variables
# DO NOT EDIT THIS FILE WITH SENSITIVE DATA

# MongoDB configuration
MONGODB_URL=your_mongodb_url_here
MONGODB_DB_NAME=your_mongodb_db_name_here
MONGODB_DIRECT_CONNECTION=your_mongodb_direct_connection_here

# Cookie settings
COOKIE_NAME=chat-ui

# Hugging Face access token
HF_ACCESS_TOKEN=hf_your_token_here # from https://huggingface.co/settings/token

# SERP API key for search with web functionality
SERPAPI_KEY=your_serpapi_key_here

# OpenID Connect settings for "Sign in with HF"
OPENID_CLIENT_ID=your_client_id_here
OPENID_CLIENT_SECRET=your_client_secret_here
OPENID_SCOPES="openid profile" # Add "email" for some providers like Google
OPENID_PROVIDER_URL=https://huggingface.co # for Google, use https://accounts.google.com

# Model configurations
MODELS=`[
  {
    "name": "your_model_name_here",
    "chatPromptTemplate": "your_model_prompt_template_here",
    "preprompt": "",
    "promptExamples": [
      {
        "title": "Python Fibonacci",
        "prompt": "How can I write a Python function to generate the nth Fibonacci number?"
      },
      {
        "title": "What is a meme?",
        "prompt": "What is a meme, and what's the history behind this word?"
      },
      {
        "title": "Regex",
        "prompt": "Create a regex to extract dates from logs"
      }
    ],
    "endpoints": [
      {
        "type": "tgi",
        "url": "http://127.0.0.1:8080"
      }
    ],
    "parameters": your_model_params_here
  }
]`
OLD_MODELS=`[]` # any removed models, `{ name: string, displayName?: string, id?: string }`

# Public settings
PUBLIC_ORIGIN=your_public_origin_here
PUBLIC_SHARE_PREFIX=${PUBLIC_ORIGIN}/r
PUBLIC_GOOGLE_ANALYTICS_ID=your_google_analytics_id_here # Leave empty to disable
PUBLIC_DEPRECATED_GOOGLE_ANALYTICS_ID=your_deprecated_google_analytics_id_here # Leave empty to disable
PUBLIC_ANNOUNCEMENT_BANNERS=`[
  {
    "title": "Chat UI is now open sourced on GitHub",
    "linkTitle": "GitHub repo",
    "linkHref": "https://github.com/huggingface/chat-ui"
  }
]`

# Parquet export settings
PARQUET_EXPORT_DATASET=your_parquet_export_dataset_here
PARQUET_EXPORT_HF_TOKEN=your_parquet_export_hf_token_here
PARQUET_EXPORT_SECRET=your_parquet_export_secret_here

# Application settings
PUBLIC_APP_NAME=your_app_name_here # name used as title throughout the app
PUBLIC_APP_ASSETS=chatui # used to find logos & favicons in static/$PUBLIC_APP_ASSETS
PUBLIC_APP_COLOR=your_app_color_here # can be any of tailwind colors: https://tailwindcss.com/docs/customizing-colors#default-color-palette
PUBLIC_APP_DATA_SHARING=0 # set to 1 to enable disclaimers & options about data sharing
PUBLIC_APP_DATA_DISCLAIMER=0 # set to 1 to enable disclaimers about model outputs

# Additional environment variables
API_KEY=your_api_key_here
DATABASE_URL=your_database_url_here
SECRET_KEY=your_secret_key_here

# OpenAI settings
OpenAISettings:ApiKey=your_openai_api_key_here
OpenAISettings:ChatModel=your_openai_chat_model_here

# Azure OpenAI settings
AzureOpenAISettings:Endpoint=your_azure_openai_endpoint_here
AzureOpenAISettings:ChatModelDeployment=your_azure_openai_chat_model_deployment_here

# Azure settings
AZURE_BLOB_STORAGE_ENDPOINT=your_azure_blob_storage_endpoint_here
AZURE_COGNITIVE_SERVICES_ENDPOINT=your_azure_cognitive_services_endpoint_here
COSMOS_DB_ENDPOINT=your_cosmos_db_endpoint_here
KEY_VAULT_ENDPOINT=your_key_vault_endpoint_here
AZURE_DEVOPS_ORGANIZATION_URL=your_azure_devops_organization_url_here
