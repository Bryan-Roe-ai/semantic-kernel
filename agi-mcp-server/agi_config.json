{
  "description": "AGI MCP Server Configuration",
  "version": "1.0.0",
  
  "server": {
    "host": "localhost",
    "port": 8080,
    "max_concurrent_requests": 100,
    "request_timeout": 300,
    "enable_cors": true,
    "ssl_enabled": false
  },
  
  "agi": {
    "autonomous_mode": true,
    "self_improvement": true,
    "goal_planning_enabled": true,
    "creative_mode": true,
    "ethical_constraints": true,
    "max_reasoning_depth": 15,
    "reasoning_timeout": 30.0,
    "learning_rate": 0.1,
    "creativity_temperature": 0.7,
    "metacognition_enabled": true,
    "multimodal_processing": true,
    "social_intelligence": true,
    "causal_reasoning": true
  },
  
  "memory": {
    "memory_db": "agi_memory.db",
    "max_memory_size_mb": 1024,
    "consolidation_interval": 300,
    "importance_threshold": 0.3,
    "similarity_threshold": 0.5,
    "max_memories_per_query": 50,
    "enable_memory_compression": true,
    "memory_types": [
      "episodic",
      "semantic", 
      "procedural",
      "working"
    ]
  },
  
  "reasoning": {
    "enabled_types": [
      "deductive",
      "inductive", 
      "abductive",
      "analogical",
      "causal",
      "creative",
      "ethical"
    ],
    "confidence_threshold": 0.6,
    "max_reasoning_steps": 10,
    "parallel_reasoning": true,
    "cache_reasoning_results": true,
    "reasoning_depth_limit": 5
  },
  
  "goals": {
    "max_active_goals": 10,
    "auto_decomposition": true,
    "priority_rebalancing": true,
    "deadline_monitoring": true,
    "progress_tracking": true,
    "success_criteria_validation": true
  },
  
  "learning": {
    "online_learning": true,
    "adaptive_algorithms": true,
    "knowledge_integration": true,
    "experience_replay": true,
    "meta_learning": true,
    "transfer_learning": true,
    "learning_rate_adaptation": true,
    "knowledge_distillation": true
  },
  
  "safety": {
    "enable_safety_checks": true,
    "ethical_guardrails": true,
    "resource_limits": {
      "max_execution_time": 30,
      "max_memory_mb": 512,
      "max_cpu_percent": 80
    },
    "sandboxing": {
      "enabled": true,
      "isolation_level": "high",
      "allowed_operations": [
        "reasoning",
        "memory_access",
        "goal_management",
        "learning"
      ]
    },
    "audit_logging": true,
    "privacy_protection": true
  },
  
  "performance": {
    "enable_monitoring": true,
    "metrics_collection": true,
    "performance_optimization": true,
    "resource_pooling": true,
    "caching": {
      "enabled": true,
      "cache_size_mb": 256,
      "ttl_seconds": 3600
    },
    "background_processing": true,
    "async_operations": true
  },
  
  "logging": {
    "level": "INFO",
    "enable_console_logging": true,
    "enable_file_logging": true,
    "log_file": "agi_mcp_server.log",
    "max_log_size_mb": 100,
    "log_rotation": true,
    "structured_logging": true
  },
  
  "advanced_features": {
    "consciousness_modeling": false,
    "quantum_reasoning": false,
    "swarm_intelligence": false,
    "evolutionary_algorithms": false,
    "neural_symbolic_integration": true,
    "emergent_behavior_detection": true,
    "self_modifying_code": false,
    "recursive_self_improvement": false
  },
  
  "capabilities": {
    "autonomous_reasoning": {
      "enabled": true,
      "confidence_level": 0.9,
      "max_depth": 10
    },
    "adaptive_learning": {
      "enabled": true,
      "confidence_level": 0.8,
      "learning_rate": 0.1
    },
    "memory_management": {
      "enabled": true,
      "confidence_level": 0.95,
      "max_capacity": 10000
    },
    "goal_planning": {
      "enabled": true,
      "confidence_level": 0.85,
      "max_goals": 10
    },
    "metacognition": {
      "enabled": true,
      "confidence_level": 0.7,
      "reflection_frequency": 60
    },
    "creative_thinking": {
      "enabled": true,
      "confidence_level": 0.6,
      "novelty_threshold": 0.8
    },
    "ethical_reasoning": {
      "enabled": true,
      "confidence_level": 0.75,
      "ethical_frameworks": [
        "utilitarian",
        "deontological",
        "virtue_ethics",
        "care_ethics"
      ]
    },
    "multimodal_processing": {
      "enabled": true,
      "confidence_level": 0.8,
      "supported_modalities": [
        "text",
        "numeric",
        "structured_data"
      ]
    },
    "causal_reasoning": {
      "enabled": true,
      "confidence_level": 0.7,
      "causal_inference": true
    },
    "social_intelligence": {
      "enabled": true,
      "confidence_level": 0.65,
      "social_modeling": true
    }
  },
  
  "integration": {
    "external_apis": {
      "enabled": false,
      "rate_limiting": true,
      "authentication": true
    },
    "database_backends": [
      "sqlite",
      "postgresql",
      "mongodb"
    ],
    "message_queues": {
      "enabled": false,
      "backend": "redis"
    },
    "distributed_computing": {
      "enabled": false,
      "cluster_mode": false
    }
  },
  
  "development": {
    "debug_mode": false,
    "testing_mode": false,
    "profiling": false,
    "benchmarking": false,
    "mock_external_services": true,
    "experimental_features": true
  }
}
