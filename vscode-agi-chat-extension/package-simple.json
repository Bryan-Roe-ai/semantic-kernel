{
  "name": "agi-chat-assistant",
  "displayName": "AGI Chat Assistant",
  "description": "Neural-Symbolic AGI Chat Interface for VS Code",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other", "Machine Learning", "Chat"],
  "keywords": [
    "agi",
    "ai",
    "chat",
    "assistant",
    "semantic-kernel",
    "neural-symbolic"
  ],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "agiChat.openChat",
        "title": "Open AGI Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "agiChat.newConversation",
        "title": "New AGI Conversation",
        "icon": "$(add)"
      },
      {
        "command": "agiChat.clearHistory",
        "title": "Clear Chat History",
        "icon": "$(clear-all)"
      },
      {
        "command": "agiChat.switchAgent",
        "title": "Switch AGI Agent",
        "icon": "$(person)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "agiChatView",
          "name": "AGI Chat Assistant",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "agi-chat",
          "title": "AGI Chat",
          "icon": "$(robot)"
        }
      ]
    },
    "keybindings": [
      {
        "command": "agiChat.openChat",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "agiChat.newConversation",
        "key": "ctrl+shift+n",
        "mac": "cmd+shift+n"
      }
    ],
    "configuration": {
      "title": "AGI Chat",
      "properties": {
        "agiChat.defaultAgent": {
          "type": "string",
          "default": "neural-symbolic",
          "description": "Default AGI agent to use"
        },
        "agiChat.semanticKernelEndpoint": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "Semantic Kernel API endpoint"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
