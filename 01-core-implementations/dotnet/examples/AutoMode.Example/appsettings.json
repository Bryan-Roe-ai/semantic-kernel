{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "SemanticKernel.AutoMode": "Debug"
    },
    "Console": {
      "IncludeScopes": false,
      "TimestampFormat": "[yyyy-MM-dd HH:mm:ss] ",
      "LogToStandardErrorThreshold": "Warning"
    }
  },
  "OpenAI": {
    "ModelId": "gpt-3.5-turbo",
    "ApiKey": "your-api-key-here"
  },
  "ExtendedAutoMode": {
    "MaxConcurrentOperations": 3,
    "BaseOperationDelayMs": 2000,
    "HealthCheckIntervalMinutes": 1,
    "MaintenanceIntervalHours": 1,
    "MaxMemoryUsageMB": 1024,
    "MaxErrorRate": 0.05,
    "StateRetentionHours": 24,
    "StateDirectory": "./state"
  }
}
