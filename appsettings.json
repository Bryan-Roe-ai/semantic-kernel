{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "MongoDB": {
      "ConnectionString": "${MONGODB_URL}",
      "DatabaseName": "${MONGODB_DB_NAME}",
      "DirectConnection": "${MONGODB_DIRECT_CONNECTION}"
    },
    "AllowedDomains": [
      "example.com",
      "anotherexample.com"
    ]
  },
  "TaskGeneratorSettings": {
