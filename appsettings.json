{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "MongoDB": {
      "ConnectionString": "${MONGODB_URL}",
      "DatabaseName": "${MONGODB_DB_NAME}",
      "DirectConnection": "${MONGODB_DIRECT_CONNECTION}"
    },
    "AllowedDomains": [
      "example.com",
      "anotherexample.com"
    ]
  },
  "TaskGeneratorSettings": {
    "Endpoint": "https://example.com/taskgenerator",
    "ApiKey": "your-api-key",
    "Topic": "default-topic",
    "DifficultyLevel": "default-difficulty",
    "TaskType": "default-task-type",
    "AllowedDomains": [
      "example.com",
      "anotherexample.com"
    ]
  },
  "SecuritySettings": {
    "AllowedDomains": [
      "example.com",
      "anotherexample.com"
    ]
  },
  "AzureCognitiveServicesSettings": {
    "Endpoint": "https://example.com/azurecognitiveservices",
    "ApiKey": "your-api-key"
  },
  "GitHubPagesSettings": {
    "Repository": "your_github_repository_here",
    "Branch": "main",
    "BuildCommand": "docker build -t my-app .",
    "RunCommand": "docker run -p 3000:3000 --env-file .env my-app",
    "DeployCommand": "actions/deploy-pages@v4"
  }
}
